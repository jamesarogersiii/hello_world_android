<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HelloWorldAndroid" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryDarkNight</item>
        <item name="colorPrimaryVariant">@color/primaryNight</item>
        <item name="colorOnPrimary">@color/primaryOn</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryDark</item>
        <item name="colorSecondaryVariant">@color/secondary</item>
        <item name="colorOnSecondary">@color/secondaryOn</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowActivityTransitions">true</item>

    </style>
</resources>